<UserControl x:Class="RaceOverlay.Engine.Views.StandingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:RaceOverlay.Engine.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400"
             Background="{StaticResource RO.BackgroundBrush}"
             Foreground="{StaticResource RO.ForegroundBrush}"
             MinWidth="400">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:StringToSolidColorBrushConverter x:Key="ColorConv"/>
        <conv:LapTimeConverter x:Key="LapTimeConv"/>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource RO.SurfaceBrush}"
                BorderBrush="{StaticResource RO.BorderBrush}"
                BorderThickness="0,0,0,1" Padding="8,10" Margin="0,0,0,4">
            <DockPanel>
                <TextBlock Text="STANDINGS" FontSize="14" FontWeight="Bold"
                           Foreground="{StaticResource RO.ForegroundBrush}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource RO.MutedBrush}">
                        <Run Text="L"/><Run Text="{Binding CurrentLap, Mode=OneWay}"/><Run Text="/"/><Run Text="{Binding TotalLaps, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Driver Rows -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Drivers}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8,10" BorderBrush="{StaticResource RO.BorderBrush}" BorderThickness="0,0,0,1">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource RO.SurfaceBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPlayer}" Value="True">
                                        <Setter Property="Background" Value="#2D3E4F"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource RO.MagentaBrush}"/>
                                        <Setter Property="BorderThickness" Value="3,0,0,1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- Position -->
                                <ColumnDefinition Width="36"/>
                                <!-- Class Color Stripe -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Driver Name -->
                                <ColumnDefinition Width="*"/>
                                <!-- Best Lap -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Gap -->
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Position -->
                            <TextBlock Grid.Column="0"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource RO.ForegroundBrush}"
                                       VerticalAlignment="Center">
                                <Run Text="P"/><Run Text="{Binding Position, Mode=OneWay}"/>
                            </TextBlock>

                            <!-- Class Color Stripe -->
                            <Border Grid.Column="1"
                                    Background="{Binding ClassColor, Converter={StaticResource ColorConv}}"
                                    Width="4" CornerRadius="2" VerticalAlignment="Stretch"
                                    Visibility="{Binding DataContext.ShowClassColor, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                                    Margin="0,0,8,0"/>

                            <!-- Driver Name -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding DriverName}" FontSize="13" FontWeight="SemiBold"
                                       Foreground="{StaticResource RO.ForegroundBrush}"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>

                            <!-- Best Lap Time -->
                            <TextBlock Grid.Column="3"
                                       Text="{Binding BestLapTime, Converter={StaticResource LapTimeConv}}"
                                       FontSize="12" MinWidth="70"
                                       Foreground="{StaticResource RO.ForegroundBrush}"
                                       VerticalAlignment="Center" TextAlignment="Right"
                                       Visibility="{Binding DataContext.ShowBestLapTime, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                                       Margin="0,0,8,0"/>

                            <!-- Gap to Leader -->
                            <TextBlock Grid.Column="4"
                                       FontSize="12" MinWidth="70"
                                       Foreground="{StaticResource RO.MutedBrush}"
                                       VerticalAlignment="Center" TextAlignment="Right"
                                       Visibility="{Binding DataContext.ShowGap, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding GapToLeader, StringFormat=+{0:F3}}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Position}" Value="1">
                                                <Setter Property="Text" Value="LEADER"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
