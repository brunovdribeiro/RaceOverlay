<UserControl x:Class="RaceOverlay.Engine.Views.RelativeOverlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource RO.BackgroundBrush}"
             Foreground="{StaticResource RO.ForegroundBrush}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: SOF / Vehicle Class / 6/25 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="SOF 2.8k" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource RO.MutedBrush}"/>
            <TextBlock Text="âœ• 6/25" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource RO.MutedBrush}" Margin="16,0,0,0"/>
        </StackPanel>

        <!-- Drivers Ahead Section -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding DriversAhead}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource RO.SurfaceBrush}" 
                            BorderBrush="{StaticResource RO.BorderBrush}"
                            BorderThickness="0,0,0,1" Padding="8,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Position -->
                            <TextBlock Grid.Column="0" Text="{Binding Position}" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"/>

                            <!-- Class Color Stripe -->
                            <Border Grid.Column="1" Background="{Binding ClassColor}" Width="4" CornerRadius="2" VerticalAlignment="Stretch"/>

                            <!-- Driver Name -->
                            <TextBlock Grid.Column="2" Text="{Binding DriverName}" FontSize="13" FontWeight="SemiBold"
                                       Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"/>

                            <!-- Elo Badge -->
                            <Border Grid.Column="3" Background="{Binding EloGradeColor}" CornerRadius="4" Padding="6,4">
                                <TextBlock Text="{Binding EloGrade}" FontSize="11" FontWeight="Bold"
                                           Foreground="White" TextAlignment="Center"/>
                            </Border>

                            <!-- Stint Badge -->
                            <Border Grid.Column="4" Background="#4B5563" CornerRadius="4" Padding="6,4" Margin="8,0">
                                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#E7EAF0">
                                    <Run Text="L"/><Run Text="{Binding StintLapsCompleted}"/>
                                </TextBlock>
                            </Border>

                            <!-- Current Lap Time -->
                            <TextBlock Grid.Column="5" FontSize="12"
                                       Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center" TextAlignment="Right">
                                <Run Text="{Binding CurrentLapTime, StringFormat=F2}"/><Run Text="s"/>
                            </TextBlock>

                            <!-- Gap -->
                            <TextBlock Grid.Column="6" FontSize="12"
                                       Foreground="{StaticResource RO.MutedBrush}" VerticalAlignment="Center" TextAlignment="Right" Margin="8,0,0,0">
                                <Run Text="{Binding GapToNextDriver, StringFormat=F1}"/><Run Text="m"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Player Position (Highlighted) -->
        <Border Grid.Row="2" Background="#2D3E4F" BorderBrush="{StaticResource RO.MagentaBrush}" BorderThickness="0,2,0,2" Padding="8,12" Margin="0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Position -->
                <TextBlock Grid.Column="0" Text="{Binding PlayerDriver.Position}" FontSize="16" FontWeight="SemiBold" 
                           Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"/>

                <!-- Class Color Stripe -->
                <Border Grid.Column="1" Background="{Binding PlayerDriver.ClassColor}" Width="4" CornerRadius="2" VerticalAlignment="Stretch"/>

                <!-- Driver Name -->
                <TextBlock Grid.Column="2" Text="{Binding PlayerDriver.DriverName}" FontSize="13" FontWeight="SemiBold"
                           Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"/>

                <!-- Elo Badge -->
                <Border Grid.Column="3" Background="{Binding PlayerDriver.EloGradeColor}" CornerRadius="4" Padding="6,4">
                    <TextBlock Text="{Binding PlayerDriver.EloGrade}" FontSize="11" FontWeight="Bold"
                               Foreground="White" TextAlignment="Center"/>
                </Border>

                <!-- Stint Badge -->
                <Border Grid.Column="4" Background="#4B5563" CornerRadius="4" Padding="6,4" Margin="8,0">
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#E7EAF0">
                        <Run Text="L"/><Run Text="{Binding PlayerDriver.StintLapsCompleted}"/>
                    </TextBlock>
                </Border>

                <!-- Current Lap Time -->
                <TextBlock Grid.Column="5" FontSize="12"
                           Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center" TextAlignment="Right">
                    <Run Text="{Binding PlayerDriver.CurrentLapTime, StringFormat=F2}"/><Run Text="s"/>
                </TextBlock>

                <!-- Gap (0.0 for player) -->
                <TextBlock Grid.Column="6" Text="0.0m" FontSize="12"
                           Foreground="{StaticResource RO.MutedBrush}" VerticalAlignment="Center" TextAlignment="Right" Margin="8,0,0,0"/>
            </Grid>
        </Border>

        <!-- Drivers Behind Section -->
        <ItemsControl Grid.Row="4" ItemsSource="{Binding DriversBehind}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource RO.SurfaceBrush}" 
                            BorderBrush="{StaticResource RO.BorderBrush}"
                            BorderThickness="0,0,0,1" Padding="8,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Position -->
                            <TextBlock Grid.Column="0" Text="{Binding Position}" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"/>

                            <!-- Class Color Stripe -->
                            <Border Grid.Column="1" Background="{Binding ClassColor}" Width="4" CornerRadius="2" VerticalAlignment="Stretch"/>

                            <!-- Driver Name -->
                            <TextBlock Grid.Column="2" Text="{Binding DriverName}" FontSize="13" FontWeight="SemiBold"
                                       Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"/>

                            <!-- Elo Badge -->
                            <Border Grid.Column="3" Background="{Binding EloGradeColor}" CornerRadius="4" Padding="6,4">
                                <TextBlock Text="{Binding EloGrade}" FontSize="11" FontWeight="Bold"
                                           Foreground="White" TextAlignment="Center"/>
                            </Border>

                            <!-- Stint Badge -->
                            <Border Grid.Column="4" Background="#4B5563" CornerRadius="4" Padding="6,4" Margin="8,0">
                                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#E7EAF0">
                                    <Run Text="L"/><Run Text="{Binding StintLapsCompleted}"/>
                                </TextBlock>
                            </Border>

                            <!-- Current Lap Time -->
                            <TextBlock Grid.Column="5" FontSize="12"
                                       Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center" TextAlignment="Right">
                                <Run Text="{Binding CurrentLapTime, StringFormat=F2}"/><Run Text="s"/>
                            </TextBlock>

                            <!-- Gap -->
                            <TextBlock Grid.Column="6" FontSize="12"
                                       Foreground="{StaticResource RO.MutedBrush}" VerticalAlignment="Center" TextAlignment="Right" Margin="8,0,0,0">
                                <Run Text="{Binding GapToNextDriver, StringFormat=F1}"/><Run Text="m"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Footer: Race Time / Lap Info -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Bottom">
            <TextBlock Text="RACE 00:00:00 / 00:24m" FontSize="11" Foreground="{StaticResource RO.MutedBrush}"/>
            <TextBlock Text="Lap 12/-25.2" FontSize="11" Foreground="{StaticResource RO.MutedBrush}" HorizontalAlignment="Right" Margin="16,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
