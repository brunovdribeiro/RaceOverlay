<UserControl x:Class="RaceOverlay.Engine.Views.RelativeOverlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:RaceOverlay.Engine.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource RO.BackgroundBrush}"
             Foreground="{StaticResource RO.ForegroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:StringToSolidColorBrushConverter x:Key="ColorConv"/>
        <conv:LapTimeConverter x:Key="LapTimeConv"/>

        <!-- Shared driver row template -->
        <DataTemplate x:Key="DriverRowTemplate">
            <Border Background="{StaticResource RO.SurfaceBrush}"
                    BorderBrush="{StaticResource RO.BorderBrush}"
                    BorderThickness="0,0,0,1" Padding="8,10">
                <StackPanel Orientation="Horizontal">
                    <!-- Position -->
                    <TextBlock Text="{Binding Position}" FontSize="16" FontWeight="SemiBold" MinWidth="30"
                               Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"
                               Visibility="{Binding DataContext.ShowPosition, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                               Margin="0,0,8,0"/>

                    <!-- Class Color Stripe -->
                    <Border Background="{Binding ClassColor, Converter={StaticResource ColorConv}}" Width="4" CornerRadius="2" VerticalAlignment="Stretch"
                            Visibility="{Binding DataContext.ShowClassColor, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                            Margin="0,0,8,0"/>

                    <!-- Driver Name -->
                    <TextBlock Text="{Binding DriverName}" FontSize="13" FontWeight="SemiBold" MinWidth="100"
                               Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"
                               Visibility="{Binding DataContext.ShowDriverName, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                               Margin="0,0,8,0"/>

                    <!-- Elo Badge -->
                    <Border Background="{Binding EloGradeColor, Converter={StaticResource ColorConv}}" CornerRadius="4" Padding="6,4"
                            Visibility="{Binding DataContext.ShowRating, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                            Margin="0,0,8,0">
                        <TextBlock Text="{Binding EloGrade}" FontSize="11" FontWeight="Bold"
                                   Foreground="White" TextAlignment="Center" MinWidth="16"/>
                    </Border>

                    <!-- Stint Badge -->
                    <Border Background="#4B5563" CornerRadius="4" Padding="6,4"
                            Visibility="{Binding DataContext.ShowStint, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                            Margin="0,0,8,0">
                        <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#E7EAF0">
                            <Run Text="L"/><Run Text="{Binding StintLapsCompleted, Mode=OneWay}"/>
                        </TextBlock>
                    </Border>

                    <!-- Current Lap Time -->
                    <TextBlock FontSize="12" MinWidth="60"
                               Text="{Binding CurrentLapTime, Converter={StaticResource LapTimeConv}}"
                               Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center" TextAlignment="Right"
                               Visibility="{Binding DataContext.ShowLapTime, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                               Margin="0,0,8,0"/>

                    <!-- Gap (seconds with sign) -->
                    <TextBlock FontSize="12" MinWidth="60"
                               Text="{Binding GapToNextDriver, StringFormat={}{0:+0.000;-0.000;0.000}s}"
                               Foreground="{StaticResource RO.MutedBrush}" VerticalAlignment="Center" TextAlignment="Right"
                               Visibility="{Binding DataContext.ShowGap, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: SOF / Vehicle Class / 6/25 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="SOF 2.8k" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource RO.MutedBrush}"/>
            <TextBlock Text="&#x2715; 6/25" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource RO.MutedBrush}" Margin="16,0,0,0"/>
        </StackPanel>

        <!-- Drivers Ahead Section -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding DriversAhead}"
                      ItemTemplate="{StaticResource DriverRowTemplate}"/>

        <!-- Player Position (Highlighted) -->
        <Border Grid.Row="2" Background="#2D3E4F" BorderBrush="{StaticResource RO.MagentaBrush}" BorderThickness="0,2,0,2" Padding="8,12" Margin="0,4">
            <StackPanel Orientation="Horizontal" DataContext="{Binding PlayerDriver}">
                <!-- Position -->
                <TextBlock Text="{Binding Position}" FontSize="16" FontWeight="SemiBold" MinWidth="30"
                           Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"
                           Visibility="{Binding DataContext.ShowPosition, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                           Margin="0,0,8,0"/>

                <!-- Class Color Stripe -->
                <Border Background="{Binding ClassColor, Converter={StaticResource ColorConv}}" Width="4" CornerRadius="2" VerticalAlignment="Stretch"
                        Visibility="{Binding DataContext.ShowClassColor, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                        Margin="0,0,8,0"/>

                <!-- Driver Name -->
                <TextBlock Text="{Binding DriverName}" FontSize="13" FontWeight="SemiBold" MinWidth="100"
                           Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center"
                           Visibility="{Binding DataContext.ShowDriverName, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                           Margin="0,0,8,0"/>

                <!-- Elo Badge -->
                <Border Background="{Binding EloGradeColor, Converter={StaticResource ColorConv}}" CornerRadius="4" Padding="6,4"
                        Visibility="{Binding DataContext.ShowRating, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                        Margin="0,0,8,0">
                    <TextBlock Text="{Binding EloGrade}" FontSize="11" FontWeight="Bold"
                               Foreground="White" TextAlignment="Center" MinWidth="16"/>
                </Border>

                <!-- Stint Badge -->
                <Border Background="#4B5563" CornerRadius="4" Padding="6,4"
                        Visibility="{Binding DataContext.ShowStint, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                        Margin="0,0,8,0">
                    <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="#E7EAF0">
                        <Run Text="L"/><Run Text="{Binding StintLapsCompleted, Mode=OneWay}"/>
                    </TextBlock>
                </Border>

                <!-- Current Lap Time -->
                <TextBlock FontSize="12" MinWidth="60"
                           Text="{Binding CurrentLapTime, Converter={StaticResource LapTimeConv}}"
                           Foreground="{StaticResource RO.ForegroundBrush}" VerticalAlignment="Center" TextAlignment="Right"
                           Visibility="{Binding DataContext.ShowLapTime, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                           Margin="0,0,8,0"/>

                <!-- Gap (0.000 for player) -->
                <TextBlock Text="0.000s" FontSize="12" MinWidth="60"
                           Foreground="{StaticResource RO.MutedBrush}" VerticalAlignment="Center" TextAlignment="Right"
                           Visibility="{Binding DataContext.ShowGap, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"/>
            </StackPanel>
        </Border>

        <!-- Drivers Behind Section -->
        <ItemsControl Grid.Row="3" ItemsSource="{Binding DriversBehind}"
                      ItemTemplate="{StaticResource DriverRowTemplate}"/>
    </Grid>
</UserControl>
