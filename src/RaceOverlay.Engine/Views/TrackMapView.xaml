<UserControl x:Class="RaceOverlay.Engine.Views.TrackMapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             MinWidth="300"
             Background="{DynamicResource RO.BackgroundBrush}"
             Foreground="{DynamicResource RO.ForegroundBrush}">

    <Border Background="{DynamicResource RO.BackgroundBrush}"
            BorderBrush="{DynamicResource RO.BorderBrush}"
            BorderThickness="1" CornerRadius="4" Padding="12">
        <DockPanel>
            <!-- Header -->
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                <TextBlock Text="TRACK MAP" FontSize="11" FontWeight="Bold"
                           Foreground="{DynamicResource RO.MutedBrush}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="L" FontSize="11" Foreground="{DynamicResource RO.MutedBrush}"/>
                    <TextBlock Text="{Binding CurrentLap}" FontSize="11" FontWeight="Bold"
                               Foreground="{DynamicResource RO.ForegroundBrush}"/>
                    <TextBlock Text="/" FontSize="11" Foreground="{DynamicResource RO.MutedBrush}"/>
                    <TextBlock Text="{Binding TotalLaps}" FontSize="11"
                               Foreground="{DynamicResource RO.MutedBrush}"/>
                </StackPanel>
            </DockPanel>

            <Border DockPanel.Dock="Top" Background="{DynamicResource RO.BorderBrush}" Height="1" Margin="0,0,0,8"/>

            <!-- Map area -->
            <Border Background="{DynamicResource RO.SurfaceBrush}" CornerRadius="2">
                <Canvas Name="MapCanvas" ClipToBounds="True" Height="240">
                    <Polyline Name="TrackLine" StrokeThickness="2.5" Opacity="0.4"/>
                </Canvas>
            </Border>
        </DockPanel>
    </Border>
</UserControl>
