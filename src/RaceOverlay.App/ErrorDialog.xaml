<Window x:Class="RaceOverlay.App.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RaceOverlay â€” Error"
        Width="520" SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="10"
            Background="{DynamicResource RO.BackgroundBrush}"
            BorderBrush="{DynamicResource RO.BorderBrush}"
            BorderThickness="1"
            Padding="24">
        <StackPanel>
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="&#x26A0;"
                           FontSize="22"
                           Foreground="{DynamicResource RO.RedBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="HeaderText"
                           Text="An unexpected error occurred"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource RO.ForegroundBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Error details -->
            <TextBox x:Name="DetailsTextBox"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     MaxHeight="300"
                     VerticalScrollBarVisibility="Auto"
                     Background="{DynamicResource RO.SurfaceBrush}"
                     Foreground="{DynamicResource RO.MutedBrush}"
                     BorderBrush="{DynamicResource RO.BorderBrush}"
                     BorderThickness="1"
                     Padding="10"
                     FontFamily="Consolas"
                     FontSize="12"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">
                <Button Content="Copy to Clipboard"
                        Style="{DynamicResource PurpleRoundedButtonStyle}"
                        Click="CopyButton_Click"
                        Margin="0,0,8,0"/>
                <Button Content="Close"
                        Style="{DynamicResource PurpleRoundedButtonStyle}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
