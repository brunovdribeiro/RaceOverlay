<UserControl x:Class="RaceOverlay.App.WidgetHostPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource RO.BackgroundBrush}">

    <Grid>
        <!-- Layer 0: Widget Content -->
        <ContentControl x:Name="WidgetContent" />

        <!-- Layer 1: Transparent drag overlay (shown only in drag mode) -->
        <Border x:Name="DragOverlay" Background="Transparent" Visibility="Collapsed">
            <TextBlock x:Name="DragModeText"
                       Text="Drag Mode"
                       Foreground="White"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Opacity="0.6" />
        </Border>
    </Grid>
</UserControl>
